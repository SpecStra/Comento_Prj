extends base/base

block content
    form(method="POST")
        div 사업장명
            input(name="name" type="text" required value="")
        div 사업장등록번호
            input(name="registerCode" minlength=6 maxlength=6 type="text" required value="")
        div 업종
            input(name="category" type="text" required value="")
        div 업종코드
            input(name="categoryCode" minlength=6 maxlength=6 type="text" required value="")
        div 이번 분기 매출액
            input(name="sales" type="number" required value="")
        div 사업장형태구분
            select(name="isPrivate")
                option(name="개인" value="0") 개인
                option(name="법인" value="1") 법인
        div 우편번호
            input(name="postcode" minlength=5 maxlength=5 type="text" required value="")
        div 지난 분기 매출액
            input(name="last_quarter" type="number" value="")
        div 2분기 이전 매출액
            input(name="sec_quarter" type="number" value="")
        div 3분기 이전 매출액
            input(name="trd_quarter" type="number" value="")
        div 첨부파일
            input(name="attach" type="text" value="")

        input(type="submit", value="Save")