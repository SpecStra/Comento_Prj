extends base/base
include mixins/company
include mixins/pages
include mixins/sortBox

block content
    if (dataFrame)
        div.tableTop
            table
                thead
                    tr
                        th
                            input(type="checkbox")
                        th Workshop Name
                        th Result Year
                        th Result Quarter
                        th Detailed
                        th File

                each data in dataFrame
                    +company(data)
                else
                    li There's something wrong in data, sorry;
    else
        h2 there is no data;
    if(page)
        div.pageContainer
            +pages(page, queryString)


    a(href="/data/add" class="add_link")
        div.add_Box
            button.add_text add Data

    //div.sort_box
        +sortBox(pickQuery)
