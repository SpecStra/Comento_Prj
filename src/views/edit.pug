extends base/base

block content
    form(method="POST")
        div 사업장명
            input(name="name" type="text" required value=detailed.name)
        div 사업장등록번호
            input(name="registerCode" minlength=6 maxlength=6 type="text" required value=detailed.registerCode)
        div 업종
            input(name="category" type="text" required value=detailed.category)
        div 업종코드
            input(name="categoryCode" minlength=6 maxlength=6 type="text" required value=detailed.categoryCode)
        div 이번 분기 매출액
            input(name="sales" type="text" required value=detailed.sales)
        div 사업장형태구분
            select(name="isPrivate")
                option(name="개인" value="0") 개인
                option(name="법인" value="1") 법인
        div 우편번호
            input(name="postcode" maxlength=5 type="text" required value=detailed.postcode)
        div 지난 분기 매출액
            input(name="last_quarter" type="text" required value=detailed.pastSales.last_quarter)
        div 2분기 이전 매출액
            input(name="sec_quarter" type="text" required value=detailed.pastSales.sec_quarter)
        div 3분기 이전 매출액
            input(name="trd_quarter" type="text" required value=detailed.pastSales.trd_quarter)
        div 첨부파일
            input(name="attach" type="text" value=detailed.attach)

        input(type="submit", value="Edit")