mixin companyDetailed(companyInfo)
    div.detailed_top
        div.detailed_lefttop
            div.detailed_name
                div.detailed_text_small 사업자등록번호 : #{companyInfo.registerCode}
                div.detailed_text (주) #{companyInfo.name} | #{companyInfo.isPrivate ? "개인" : "법인"}
            div.detailed_name
                div.detailed_text_small 사업장형태구분코드 : #{companyInfo.categoryCode}
                div.detailed_text #{companyInfo.category}

        div.detailed_righttop
            div.detailed_date
                div.detailed_text_small 기록일자
                div.detailed_text #{companyInfo.financeInfo.recodedDate.year}년 #{companyInfo.financeInfo.recodedDate.quarter}분기
            div.detailed_sales
                div.detailed_text_small 매출액
                div.detailed_text #{companyInfo.financeInfo.sales.toLocaleString( "ko-KR" )}
            div.detailed_sales
                div.detailed_text_small 영업이익
                div.detailed_text #{companyInfo.financeInfo.operIncome.toLocaleString( "ko-KR" )}
            div.detailed_sales
                div.detailed_text_small 당기순이익
                div.detailed_text #{companyInfo.financeInfo.netIncome.toLocaleString( "ko-KR" )}
            div.detailed_date
                div.detailed_text_small 최근 수정일  |  수정자 : #{companyInfo.modifier.user}
                div.detailed_text #{companyInfo.modifier.date}

        div.detailed_leftbot
            div.detailed_button_container
                a(href=`/data/${ companyInfo._id.toString() }/edit`)
                    button.detailed_button Edit
                a(href=`/data/${ companyInfo._id.toString() }/delete`)
                    button.detailed_button Data Delete


        div.detailed_rightbot
            div.detailed_text_small 첨부파일
            if(detailed.attach.name)
                div.detailed_files
                    ul
                        a(href=`${companyInfo.attach.path}`)
                            li.detailed_text #{companyInfo.attach.name}
                    //a(href=`/data/${ companyInfo.attach.path }/delete`)
                        button.detailed_files_delete 첨부파일 삭제
            else
                h3 * 첨부파일 없음
