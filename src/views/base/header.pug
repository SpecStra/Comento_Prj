- var firstPage = 1

block style
    style
        include ../style/styles.css

nav.sidebar
    header
        div.image_text
            span.image_span
                img(src="../style/logo.png" alt="logo")




        if(currentUser)
            h4 #{currentUser} on duty
        ul
            li
                a(href="/") Home
            if(!loggedIn)
                li
                    a(href="/login") Log In
                li
                    a(href="/join") Join
            else
                li
                    a(href="/logout") Log Out
            li
                a(href=`/data/pages/${firstPage}/`) Data